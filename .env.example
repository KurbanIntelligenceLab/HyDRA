# OpenRouter API key for LLM access
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# Allowed CORS origins (comma-separated)
# For development: http://localhost:5173,http://localhost:3000
# For production: https://your-app.vercel.app
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Session configuration
# Secret key for session management (generate with: openssl rand -hex 32)
SESSION_SECRET_KEY=your-secret-key-here-change-in-production

# Maximum session age in seconds (default: 7200 = 2 hours)
SESSION_MAX_AGE=7200

# Cleanup configuration (for background cleanup job)
# Maximum age before session cleanup in seconds
CLEANUP_MAX_AGE=7200

# Cleanup interval in seconds (for continuous cleanup mode)
CLEANUP_INTERVAL=1800
